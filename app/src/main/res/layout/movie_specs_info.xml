<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.constraint.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/movie_specs_info"
    android:background="@color/goldLight"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_title"
        android:text="some movie title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/poster_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/favorite_icon"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_release_date"
        android:textSize="15sp"
        android:text="200025"
        android:layout_marginTop="@dimen/poster_padding"
        android:layout_marginLeft="@dimen/poster_padding"
        android:layout_marginStart="@dimen/poster_padding"
        app:layout_constraintLeft_toLeftOf="@+id/tv_movie_title"
        app:layout_constraintRight_toRightOf="@+id/tv_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_average_rating"
        android:textSize="15sp"
        android:text="5.5/10"
        android:layout_marginTop="@dimen/poster_padding"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_release_date"
        app:layout_constraintLeft_toLeftOf="@+id/tv_movie_release_date"
        app:layout_constraintRight_toRightOf="@+id/tv_movie_release_date"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorite_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_movie_title"
        />

</android.support.constraint.ConstraintLayout>
</layout>