<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/movie_specs_info">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_release_date"
        android:textSize="15sp"
        android:text="200025"
        android:layout_marginTop="@dimen/poster_padding"
        android:layout_marginLeft="@dimen/poster_padding"
        android:layout_marginStart="@dimen/poster_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_average_rating"
        android:textSize="12sp"
        android:text="5.5/10"
        android:layout_marginTop="@dimen/poster_padding"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_release_date"
        app:layout_constraintLeft_toLeftOf="@id/tv_movie_release_date"
        app:layout_constraintRight_toRightOf="@+id/tv_movie_release_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_read_reviews"
        android:textSize="10sp"
        android:text="@string/read_reviews"
        android:layout_marginTop="@dimen/poster_padding"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_average_rating"
        app:layout_constraintLeft_toLeftOf="@id/tv_movie_average_rating"
        app:layout_constraintRight_toRightOf="@+id/tv_movie_average_rating" />

</android.support.constraint.ConstraintLayout>
</layout>