<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGray">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_third_vertical"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.33"
                tools:layout_editor_absoluteY="250dp"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/backdrop_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/top_third_vertical" />

            <!--<ImageView-->
                <!--android:layout_width="@dimen/poster_detail_width"-->
                <!--android:layout_height="@dimen/poster_detail_height"-->
                <!--android:id="@+id/iv_movie_poster"-->
                <!--android:paddingBottom="@dimen/poster_padding"-->
                <!--android:background="@drawable/ic_favorite_black_24dp"-->
                <!--app:layout_constraintRight_toRightOf="parent"-->
                <!--app:layout_constraintTop_toBottomOf="@id/top_third_vertical"-->
                <!--app:layout_constraintBottom_toTopOf="@id/top_third_vertical"-->
                <!--/>-->


            <include
                android:id="@+id/movie_specs_info"
                layout="@layout/movie_specs_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/poster_padding"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/top_third_vertical"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_movie_overview"
                android:textColor="@color/white"
                android:text="Some movie where someone, played by someone you know, does something crazy. Action and love scenes abound. Everything works
                out in the end. Blaaahhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh
                Blahhhh blahhhhhhhhhhhh."
                android:textStyle="bold"
                android:paddingBottom="@dimen/poster_padding"
                app:layout_constraintTop_toBottomOf="@+id/movie_specs_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/rv_trailers"
                android:paddingBottom="@dimen/poster_padding"
                app:layout_constraintTop_toBottomOf="@+id/tv_movie_overview"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

    <!--</ScrollView>-->
    </android.support.constraint.ConstraintLayout>
